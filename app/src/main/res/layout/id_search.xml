<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lime.test.Idsearc">
    
    <TextView
        android:id="@+id/idname"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:text="성명"
        android:textSize="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="35dp"
        />

    <EditText
        android:id="@+id/idnameinput"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/idname"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:hint="이름을 입력하세요"
        android:ems="10"
        />

    <TextView
        android:id="@+id/idjnumber"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_below="@id/idname"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:text="주민등록번호"
        android:textSize="20dp"
        ></TextView>

    <EditText
        android:id="@+id/idjnumberinput1"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_toRightOf="@id/idjnumber"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/idnameinput"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/idjnumberg"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_below="@id/idnameinput"
        android:layout_toRightOf="@id/idjnumberinput1"
        android:layout_marginTop="20dp"
        android:text="ㅡ"

    ></TextView>

    <EditText
        android:id="@+id/idjnumberinput2"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:inputType="numberPassword"
        android:layout_toRightOf="@id/idjnumberg"
        android:layout_alignEnd="@id/idnameinput"
        android:layout_below="@id/idnameinput"
        android:layout_marginTop="10dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/idemail"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_below="@id/idjnumber"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="E-mail"
        android:textSize="20dp"/>
    
    <EditText
        android:id="@+id/idemailinput"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/idjnumberinput1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/idemail"
        android:layout_marginLeft="15dp"
        android:hint="이메일을 입력하세요"
        />

    <Button
        android:id="@+id/ididsearchbutton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/idemailinput"
        android:layout_marginTop="30dp"
        android:background="#FFB914"
        android:text="아이디 찾기"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/idmainbutton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/ididsearchbutton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:text="로그인 화면"
        android:textColor="#FFFFFF"
        android:background="#50C2FF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ⓒ ---------. All right reserved"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        />



</RelativeLayout>