<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lime.test.Idsearc">

    <TextView
        android:id="@+id/idname2"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:text="성명"
        android:textSize="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="35dp"
        />

    <EditText
        android:id="@+id/idnameinput2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/idname2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:hint="이름을 입력하세요"
        android:ems="10"
        />

    <TextView
        android:id="@+id/idid2"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_below="@id/idname2"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="아이디"
        android:textSize="20dp"
        ></TextView>

    <EditText
        android:id="@+id/ididinput2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_toRightOf="@id/idid2"
        android:layout_marginLeft="23dp"
        android:layout_below="@id/idnameinput2"
        android:layout_marginTop="15dp"
        android:hint="아이디를 입력하세요"
        />


    <TextView
        android:id="@+id/idemail2"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_below="@id/idid2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="E-mail"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/idemailinput2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/ididinput2"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/idemail2"
        android:layout_marginLeft="15dp"
        android:hint="이메일을 입력하세요"
        />

    <Button
        android:id="@+id/idpasssearchbutton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/idemailinput2"
        android:layout_marginTop="30dp"
        android:background="#FFB914"
        android:text="비밀번호 찾기"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/idmainbutton2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/idpasssearchbutton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:text="로그인 화면"
        android:textColor="#FFFFFF"
        android:background="#50C2FF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ⓒ ---------. All right reserved"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        />


</RelativeLayout>